<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header (Timestamp, Total Count, Dropdown Icon) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center_vertical">

        <!-- Dropdown Icon -->
        <ImageView
            android:id="@+id/dropdownIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_drop_down"
            android:rotation="270"
            android:contentDescription="Dropdown Icon"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTotalCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center" />
    </LinearLayout>

    <!-- Detail Dropdown -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dropdownContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="#E0E0E0"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/dropdownContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Judul Dropdown -->
            <TextView
                android:id="@+id/dropdownTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:padding="4dp" />

            <!-- Detail Items (Akan Ditambahkan Secara Dinamis) -->
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

</LinearLayout>
