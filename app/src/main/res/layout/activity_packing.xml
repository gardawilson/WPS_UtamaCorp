<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".Packing">

    <!-- CardView Kiri -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="LABEL PACKING"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Search Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="No. BJ"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <SearchView
                        android:id="@+id/NoBarangJadi"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/border_input"
                        android:elevation="1dp"
                        app:iconifiedByDefault="false"
                        app:queryHint="Search here..."
                        style="@style/Widget.AppCompat.SearchView.ActionBar" />

                    <EditText
                        android:id="@+id/NoBarangJadi_display"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:padding="6dp"
                        android:textSize="14sp"
                        android:background="@drawable/border_input"
                        android:elevation="1dp"
                        android:visibility="gone"
                        android:hint="NoS4S_display" />
                </FrameLayout>

            </LinearLayout>

            <!-- EditText Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Tgl / Jam"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/DateP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    android:background="@drawable/border_input"
                    android:elevation="1dp"
                    android:hint="Tanggal" />

                <EditText
                    android:id="@+id/TimeP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:textSize="14sp"
                    android:background="@drawable/border_input"
                    android:elevation="1dp"
                    android:hint="Jam" />
            </LinearLayout>

            <!-- Spinner 1 Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kayu"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/SpinKayuP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:background="@drawable/border_input"
                    android:elevation="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <!-- RadioGroup dengan RadioButton -->
                <RadioGroup
                    android:id="@+id/RadioGroupP"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioButtonMesinP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mesin"
                        android:layout_marginEnd="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:layout_marginBottom="10dp"/>

                    <RadioButton
                        android:id="@+id/radioButtonBSusunP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Susun"
                        android:layout_marginEnd="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />
                </RadioGroup>

                <!-- Spinner di sebelah kanan RadioButton -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/SpinMesinP"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_input"
                        android:elevation="1dp"
                        android:layout_marginBottom="10dp"/>

                    <Spinner
                        android:id="@+id/SpinSusunP"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/border_input"
                        android:elevation="1dp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Telly"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/SpinTellyP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:background="@drawable/border_input"
                    android:elevation="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="No SPK"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/SpinSPKP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:background="@drawable/border_input"
                    android:elevation="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="No SPK Asal"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/SpinSPKAsalP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:background="@drawable/border_input"
                    android:elevation="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Barang Jadi"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/SpinBarangJadiP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:background="@drawable/border_input"
                    android:elevation="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="FJ Profile"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/SpinProfileP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:background="@drawable/border_input"
                    android:elevation="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="No WIP"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/NoWIP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:textSize="14sp"
                    android:background="@drawable/border_input"
                    android:elevation="1dp"
                    android:hint="-" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_top_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toEndOf="@id/card_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card_bottom_right"
        app:layout_constraintHeight_percent="0.8"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:layout_marginBottom="0dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <!-- CardView Atas Kiri -->
            <androidx.cardview.widget.CardView
                android:id="@+id/inner_card_top_left"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/inner_card_top_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/inner_card_bottom"
                app:layout_constraintWidth_percent="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/title_top_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Tebal"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <AutoCompleteTextView
                            android:id="@+id/DetailTebalP"
                            android:layout_width="150dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:textSize="14sp"
                            android:background="@drawable/border_input"
                            android:elevation="1dp"
                            android:hint="Tebal"
                            android:inputType="numberDecimal"
                            android:completionThreshold="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Lebar"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <AutoCompleteTextView
                            android:id="@+id/DetailLebarP"
                            android:layout_width="150dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:textSize="14sp"
                            android:background="@drawable/border_input"
                            android:elevation="1dp"
                            android:hint="Lebar"
                            android:inputType="numberDecimal"
                            android:completionThreshold="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Panjang"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <AutoCompleteTextView
                            android:id="@+id/DetailPanjangP"
                            android:layout_width="150dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:textSize="14sp"
                            android:background="@drawable/border_input"
                            android:elevation="1dp"
                            android:hint="Panjang"
                            android:inputType="numberDecimal"
                            android:completionThreshold="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Pcs"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/DetailPcsP"
                            android:layout_width="150dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:textSize="14sp"
                            android:background="@drawable/border_input"
                            android:elevation="1dp"
                            android:hint="Pcs"
                            android:inputType="number"
                            android:completionThreshold="1"
                            android:imeOptions="actionDone"
                            />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CardView Atas Kanan -->
            <androidx.cardview.widget.CardView
                android:id="@+id/inner_card_top_right"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toEndOf="@id/inner_card_top_left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/inner_card_bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Satuan Panjang"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E0E0E0">

                        <RadioGroup
                            android:id="@+id/radioGroupUOMPanjang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <RadioButton
                                android:id="@+id/radioCentimeter"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="Millimeter"
                                android:checked="true"
                                android:textSize="12sp"
                                android:layout_marginBottom="2dp"/>

                            <RadioButton
                                android:id="@+id/radioMeter"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="Meter"
                                android:textSize="12sp"
                                android:enabled="false"
                                android:layout_marginBottom="2dp"/>

                            <RadioButton
                                android:id="@+id/radioFeet"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="Feet"
                                android:enabled="false"
                                android:textSize="12sp"/>

                        </RadioGroup>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Satuan Tebal-Lebar"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="12dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E0E0E0">

                        <RadioGroup
                            android:id="@+id/radioGroupUOMTblLebar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <RadioButton
                                android:id="@+id/radioMillimeter"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="Millimeter"
                                android:textSize="12sp"
                                android:checked="true"
                                android:layout_marginBottom="2dp"/>

                            <RadioButton
                                android:id="@+id/radioInch"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="Inch"
                                android:enabled="false"
                                android:textSize="12sp"/>

                        </RadioGroup>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CardView Bawah Full -->
            <androidx.cardview.widget.CardView
                android:id="@+id/inner_card_bottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inner_card_top_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="175dp"
                        android:fillViewport="true"
                        android:scrollbars="none"
                        android:layout_marginBottom="5dp">

                        <TableLayout
                            android:id="@+id/Tabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.86">

                            <!-- Table Header Row -->
                            <TableRow
                                android:background="@drawable/table_header_bg">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="10sp"
                                    android:text="No"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="10sp"
                                    android:text="Tebal"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="10sp"
                                    android:text="Lebar"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="10sp"
                                    android:text="Panjang"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="10sp"
                                    android:text="Pcs"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="10sp"
                                    android:text="Aksi"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp" />
                            </TableRow>

                        </TableLayout>

                    </ScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Jumlah Pcs :"
                                android:textSize="14sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/JumlahPcsP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textSize="14sp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="M3 :"
                                android:textSize="14sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/M3P"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textSize="14sp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/CBAfkirP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Afkir / Reject"
                            android:textSize="14sp"
                            android:layout_marginRight="20dp" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/CBLemburP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lembur"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



    <!-- CardView Kanan Bawah -->
